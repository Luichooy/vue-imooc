border-top($color)
  position: relative
  &::after
    display: block
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 1px
    background-color: $color
    content: ''

border-bottom($color)
  position: relative
  &::after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    height: 1px
    background-color: $color
    content: ''

